<Window x:Class="AsynchAndAwaitApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsynchAndAwaitApp"
        mc:Ignorable="d"
        Title="WPF and Async" Height="150" Width="200" ResizeMode="CanResizeWithGrip">
    <Grid>
        <StackPanel Margin="5">
            <CheckBox x:Name="useAwaitAsync" IsChecked="True" Content="Use await/async"/>
            <Button x:Name="countButton" Content="Start counting"
                    HorizontalAlignment="Left" Margin="5" Click="countButton_Click"/>
            <TextBlock x:Name="progress" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
